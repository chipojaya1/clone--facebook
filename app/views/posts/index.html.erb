<h1>All Posts</h1>

<%= link_to 'New Post', new_post_path %>

<% @posts.each do |post| %>
<article class="post">
  <p class="content">
    <strong><%= post.user.name %></strong>
  </p>
  <hr>
  <% if post.image && post.image.url %>
  <%= image_tag post.image.url(), class: "image" %>
  <% end %>

  <p><%= post.posts %></p>
  <br>
  <small><%= post.created_at.strftime('%Y/%-m/%-d %-H:%-M') %></small>
  <br>
  <span class="button"><%= link_to 'Show', post %></span>
  <span class="button"><%= link_to 'Edit', edit_post_path(post) %></span>
  <span class="button"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
  <br><br>
</article>
<% end %>
